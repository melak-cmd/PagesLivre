            </StackPanel>
        </s:SurfaceButton>
        
        <s:SurfaceButton Style="{StaticResource PageButton}">
            <StackPanel Style="{StaticResource PageTitleBlock1}">
                <book:imgFNAIM ShowTitre="False" />
                <TextBlock Style="{StaticResource PageTitle1}">L'avant contrat de vente</TextBlock>
            </StackPanel>
        </s:SurfaceButton>
        
        <s:SurfaceButton Style="{StaticResource PageButton}">
            <StackPanel Style="{StaticResource PageTitleBlock1}">
                <book:imgFNAIM ShowTitre="False" />
                <TextBlock Style="{StaticResource PageTitle1}">La révision du loyer</TextBlock>
            </StackPanel>
        </s:SurfaceButton>
        
        <s:SurfaceButton Style="{StaticResource PageButton}">
            <StackPanel Style="{StaticResource PageTitleBlock1}">
                <book:imgFNAIM ShowTitre="False" />
