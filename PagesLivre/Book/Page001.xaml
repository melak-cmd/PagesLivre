            </StackPanel>
        </s:SurfaceButton>
        
        <s:SurfaceButton Style="{StaticResource PageButton}">
            <StackPanel Style="{StaticResource PageTitleBlock1}">
                <book:imgFNAIM ShowTitre="False" />
                <TextBlock Style="{StaticResource PageTitle1}">Crédits immobiliers : les règles légales</TextBlock>
            </StackPanel>
        </s:SurfaceButton>
        
        <s:SurfaceButton Style="{StaticResource PageButton}">
            <StackPanel Style="{StaticResource PageTitleBlock1}">
                <book:imgFNAIM ShowTitre="False" />
                <TextBlock Style="{StaticResource PageTitle1}">L'achat du terrain</TextBlock>
            </StackPanel>
        </s:SurfaceButton>
        
